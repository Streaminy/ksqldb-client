{
    "ignorePatterns": ["node_modules", "coverage", "lib"],
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": ["eslint:recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-console": "off"
    }
}
